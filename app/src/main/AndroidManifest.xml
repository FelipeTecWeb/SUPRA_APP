    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TelaInicialActivity"></activity>
        <activity android:name=".crud.AddAlunoActivity" />
        <activity android:name=".crud.AlunoListActivity"></activity>
        <activity android:name=".crud.ModificaAlunoActivity"></activity>
        <activity android:name=".Activity_DiarioCrianca"></activity>
        <activity android:name=".Activity_Boletim"></activity>
        <activity android:name=".Activity_Mensagem"></activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
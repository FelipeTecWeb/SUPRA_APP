<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="61dp"
            android:layout_marginEnd="56dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextSenha"
            android:layout_alignStart="@+id/editTextNome"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextSenha2"
            android:layout_alignStart="@+id/editTextEmail"
            android:layout_marginBottom="69dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextSenha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_add_usuario"
            android:layout_alignStart="@+id/editTextSenha"
            android:layout_marginBottom="50dp"
            android:ems="10"
            android:hint="Confirme a Senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_add_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:background="@color/colorNavigation"
            android:textColor="#FFFFFF"
            android:text="Criar Conta" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
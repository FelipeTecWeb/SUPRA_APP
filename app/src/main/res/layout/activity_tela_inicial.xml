<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.supra.gestaoescolar.TelaInicialActivity">

    <Button
        android:id="@+id/botaoSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Sair"
        android:layout_marginTop="39dp"
        android:background="@color/colorNavigation"
        android:shadowRadius="10"
        />

    <Button
        android:id="@+id/botaoDiario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoNoticia"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Diario das Crianças"
        android:layout_marginTop="39dp"
        android:background="@color/colorNavigation"
        android:textColor="#ffffff"
        android:shadowRadius="10"
         />

    <Button
        android:id="@+id/botaoBoletim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoSair"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Boletim"
        android:layout_marginTop="39dp"
        android:background="@color/colorNavigation"
        android:textColor="#ffffff"
        android:shadowRadius="10"
         />

    <Button
        android:id="@+id/botaoNoticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoMensagem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Noticias"
        android:layout_marginTop="39dp"
        android:background="@color/colorNavigation"
        android:textColor="#FFFFFF"
        android:shadowRadius="10"
         />

    <Button
        android:id="@+id/botaoMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoBoletim"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Mensagem"
        android:layout_marginTop="39dp"
        android:background="@color/colorNavigation"
        android:shadowRadius="10"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/botaoinformacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoDiario"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorNavigation"
        android:onClick="chamaCadastro"
        android:shadowRadius="10"
        android:text="Adicionar Informações Aluno"
        android:textColor="#FFFFFF" />

</RelativeLayout>
